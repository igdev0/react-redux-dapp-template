{
  "name": "react-redux-dapp-template",
  "version": "1.0.0",
  "description": "A React-Redux-Hardhat template",
  "main": "index.ts",
  "engines": {
    "node": ">=22"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "precommit": "lint-staged",
    "lint": "npm run lint --workspaces",
    "dapp:start": "npm start --workspace=dapp",
    "dapp:dev": "npm run dev --workspace=dapp",
    "dapp:test": "npm test --workspace=dapp",
    "dapp:lint": "npm run lint --workspace=dapp",
    "dapp:lint:fix": "npm run lint:fix --workspace=dapp",
    "dapp:type-check": "npm run type-check --workspace=dapp",
    "dapp:build": "npm run format --workspace=dapp",
    "dapp:format": "npm run format --workspace=dapp",
    "hardhat:account": "npm run account --workspace=hardhat",
    "hardhat:account-import": "npm run account:import --workspace=hardhat",
    "hardhat:account-reveal": "npm run account:reveal-pk --workspace=hardhat",
    "hardhat:chain": "npm run chain --workspace=hardhat",
    "hardhat:check-types": "npm run check-types --workspace=hardhat",
    "hardhat:clean": "npm run clean --workspace=hardhat",
    "hardhat:compile": "npm run compile --workspace=hardhat",
    "hardhat:deploy":"npm run deploy --workspace=hardhat",
    "hardhat:flatten": "npm run flatten --workspace=hardhat",
    "hardhat:fork":"npm run fork --workspace=hardhat",
    "hardhat:format": "npm run format --workspace=hardhat",
    "hardhat:generate":"npm run generate --workspace=hardhat",
    "hardhat:hardhat-verify": "npm run hardhat-verify --workspace=hardhat",
    "hardhat:lint": "npm run lint --workspace=hardhat",
    "hardhat:lint-fix": "npm run lint:fix --workspace=hardhat",
    "hardhat:lint-staged": "npm run lint-staged --workspace=hardhat",
    "hardhat:test":  "npm run test --workspace=hardhat",
    "hardhat:verify": "npm run verify --workspace=hardhat"
  },
  "author": "Ianos Dorultan",
  "license": "MIT",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5"
  }
}
